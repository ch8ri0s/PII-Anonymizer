{
  "name": "a5-pii-anonymizer",
  "version": "1.0.0",
  "productName": "A5 PII Anonymizer",
  "description": "Secure PII detection and anonymization for documents - supports PDF, Word, Excel, and CSV files",
  "author": "A5 Team",
  "license": "MIT",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "node test/textExtractor.test.js",
    "test:extractor": "node test/textExtractor.test.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "build:all": "electron-builder -mwl --publish never",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "pii",
    "anonymizer",
    "privacy",
    "gdpr",
    "hipaa",
    "data-protection",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ch8ri0s/PII-Anonymizer"
  },
  "dependencies": {
    "@xenova/transformers": "2.17.2",
    "docx": "^8.4.0",
    "exceljs": "^4.3.0",
    "mammoth": "^1.5.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.a5.piiAnonymizer",
    "productName": "A5 PII Anonymizer",
    "copyright": "Copyright Â© 2024 A5 Team",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!test/**",
      "!*.md",
      "!.git/**",
      "!.github/**",
      "!dist/**",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "A5 Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "A5 PII Anonymizer",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "LICENSE"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "A5 Team",
      "synopsis": "PII Anonymization Tool",
      "description": "Secure PII detection and anonymization for documents"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
