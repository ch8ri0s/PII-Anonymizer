{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://softcom.pro/schemas/translation-file.json",
  "title": "Translation File Schema",
  "description": "JSON schema for PII Anonymiser translation files",
  "type": "object",
  "required": ["metadata", "translations"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["locale", "version", "lastUpdated"],
      "properties": {
        "locale": {
          "type": "string",
          "enum": ["en", "fr", "de"],
          "description": "ISO 639-1 language code"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version (e.g., '2.0.0')"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "translator": {
          "type": "string",
          "description": "Name of translator or translation service (optional)"
        },
        "reviewedBy": {
          "type": "string",
          "description": "Name of reviewer (optional)"
        }
      }
    },
    "translations": {
      "type": "object",
      "description": "Nested translation keys organized by UI section",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "string",
              "minLength": 1,
              "description": "Translated text (must not be empty)"
            }
          }
        }
      }
    }
  }
}
